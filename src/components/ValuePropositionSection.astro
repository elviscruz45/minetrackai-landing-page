---
const { title, subtitle, values } = Astro.props
---

<section class="relative py-20 lg:py-32 overflow-hidden">
  <div class="bs-container">
    
    <!-- Header -->
    <div class="text-center mb-16 max-w-4xl mx-auto">
      <h2 class="text-4xl md:text-5xl font-bold text-white mb-4" set:html={title} />
      <p class="text-xl text-gray-400">{subtitle}</p>
    </div>

    <!-- Hexagons Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 lg:gap-6">
      
      {values.map((value, index) => (
        <div class="hexagon-card" style={`animation-delay: ${index * 0.1}s`}>
          <div class="hexagon-wrapper">
            
            <!-- Hexagon Shape -->
            <div class={`hexagon hexagon-${index + 1}`}>
              <div class="hexagon-inner glass">
                
                <!-- Icon -->
                <div class="mb-6">
                  <svg class="w-16 h-16 mx-auto text-white" fill="currentColor" viewBox="0 0 24 24">
                    <path d={value.icon} />
                  </svg>
                </div>

                <!-- Number -->
                <div class="text-6xl font-bold text-white/90 mb-4">{index + 1}</div>

                <!-- Content -->
                <h3 class="text-lg font-semibold text-white mb-2 leading-tight px-4">{value.title}</h3>

              </div>
            </div>

          </div>
        </div>
      ))}

    </div>

  </div>
</section>

<style>
  .hexagon-card {
    animation: fadeInScale 0.8s ease-out forwards;
    opacity: 0;
  }

  @keyframes fadeInScale {
    from {
      opacity: 0;
      transform: scale(0.8);
    }
    to {
      opacity: 1;
      transform: scale(1);
    }
  }

  .hexagon-wrapper {
    position: relative;
    width: 100%;
    padding-bottom: 115.47%; /* âˆš3 ratio for hexagon */
  }

  .hexagon {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    clip-path: polygon(50% 0%, 100% 25%, 100% 75%, 50% 100%, 0% 75%, 0% 25%);
    transition: all 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
  }

  .hexagon-1 {
    background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
  }

  .hexagon-2 {
    background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
  }

  .hexagon-3 {
    background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
  }

  .hexagon-4 {
    background: linear-gradient(135deg, #1e40af 0%, #1e3a8a 100%);
  }

  .hexagon-inner {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 2rem 1rem;
    text-align: center;
  }

  .hexagon-card:hover .hexagon {
    transform: translateY(-10px) rotate(5deg);
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.4);
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .hexagon-wrapper {
      max-width: 280px;
      margin: 0 auto;
    }
  }

  @media (min-width: 769px) and (max-width: 1024px) {
    .hexagon-wrapper {
      max-width: 220px;
      margin: 0 auto;
    }
  }
</style>
