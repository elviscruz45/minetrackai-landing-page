---
const { title, subtitle, values } = Astro.props
---

<section class="relative py-20 lg:py-32 overflow-hidden">
  <div class="bs-container">
    
    <!-- Header -->
    <div class="text-center mb-16 max-w-4xl mx-auto">
      <h2 class="text-4xl md:text-5xl font-bold text-white mb-4" set:html={title} />
      <p class="text-xl text-gray-400">{subtitle}</p>
    </div>

    <!-- Cards Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 lg:gap-8 max-w-6xl mx-auto">
      
      {values.map((value, index) => (
        <div class="value-card" style={`animation-delay: ${index * 0.1}s`}>
          <div class={`card-container card-${index + 1}`}>
            
            <!-- Icon Section -->
            <div class="icon-section">
              <svg class="w-12 h-12 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d={value.icon} />
              </svg>
            </div>

            <!-- Content Section -->
            <div class="content-section">
              <h3 class="text-xl font-bold text-white mb-2 leading-tight">{value.title}</h3>
              <button class="text-sm text-white/80 hover:text-white transition-colors duration-200 uppercase tracking-wide font-semibold">
                Más información
              </button>
            </div>

          </div>
        </div>
      ))}

    </div>

  </div>

  <!-- Decorative elements -->
  <div class="absolute top-20 left-10 w-96 h-96 bg-purple-500/10 rounded-full blur-3xl"></div>
  <div class="absolute bottom-20 right-10 w-96 h-96 bg-teal-500/10 rounded-full blur-3xl"></div>
</section>

<style>
  .value-card {
    animation: fadeInUp 0.8s ease-out forwards;
    opacity: 0;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .card-container {
    display: flex;
    align-items: center;
    gap: 0;
    border-radius: 1rem;
    overflow: hidden;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
    transition: all 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
    height: 140px;
  }

  .card-container:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 50px rgba(0, 0, 0, 0.5);
  }

  .icon-section {
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    padding: 2rem;
    display: flex;
    align-items: center;
    justify-content: center;
    height: 100%;
    min-width: 140px;
  }

  .content-section {
    flex: 1;
    padding: 2rem;
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 0.5rem;
  }

  /* Color gradients for each card */
  .card-1 {
    background: linear-gradient(135deg, #0d9488 0%, #0f766e 100%);
  }

  .card-2 {
    background: linear-gradient(135deg, #8b5cf6 0%, #7c3aed 100%);
  }

  .card-3 {
    background: linear-gradient(135deg, #0ea5e9 0%, #0284c7 100%);
  }

  .card-4 {
    background: linear-gradient(135deg, #84cc16 0%, #65a30d 100%);
  }

  .card-5 {
    background: linear-gradient(135deg, #dc2626 0%, #b91c1c 100%);
  }

  .card-6 {
    background: linear-gradient(135deg, #ec4899 0%, #db2777 100%);
  }

  .card-7 {
    background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
  }

  .card-8 {
    background: linear-gradient(135deg, #eab308 0%, #ca8a04 100%);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .card-container {
      height: auto;
      min-height: 120px;
    }

    .icon-section {
      min-width: 100px;
      padding: 1.5rem;
    }

    .icon-section svg {
      width: 2rem;
      height: 2rem;
    }

    .content-section {
      padding: 1.5rem;
    }

    .content-section h3 {
      font-size: 1rem;
    }
  }
</style>
