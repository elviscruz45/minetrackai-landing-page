---

import Logo from '../assets/theme-images/logo.svg'

const { settings } = Astro.props
const currentYear = new Date().getFullYear()

---

<footer class="relative pt-20 pb-8 overflow-hidden" id="contact">
  
  <!-- Gradient Background -->
  <div class="absolute inset-0 bg-gradient-to-b from-bs-surface-0 via-bs-surface-1 to-bs-surface-2"></div>
  
  <!-- Decorative Elements -->
  <div class="absolute top-0 left-1/2 -translate-x-1/2 w-full h-px bg-gradient-to-r from-transparent via-white/20 to-transparent"></div>
  
  <div class="bs-container relative z-10">
    
    <!-- Main Footer Content -->
    <div class="grid lg:grid-cols-12 gap-12 lg:gap-16 mb-16">
      
      <!-- Left: Brand & CTA (5 cols) -->
      <div class="lg:col-span-5 space-y-8">
        
        <!-- Logo & Tagline -->
        <div class="space-y-4">
          <!-- <a class="flex group w-fit" href="#inicio" aria-label="Volver arriba">
            <Logo class="group-hover:-rotate-180 group-hover:scale-90 transition-transform ease-bs-spring duration-1000 text-white" height="56" width="56" />
          </a> -->
          
          <div>
            <h3 class="text-2xl font-bold text-white mb-2">MineTrack AI</h3>
            <p class="text-gray-400 text-sm leading-relaxed max-w-md">
              Optimiza tus paradas de planta con inteligencia artificial. Reduce tiempos de inactividad hasta 30% en operaciones mineras.
            </p>
          </div>
        </div>

        <!-- CTA Box -->
        <div class="glass p-6 rounded-xl border border-white/10 space-y-4">
          <div class="flex items-start gap-3">
            <div class="flex-shrink-0 w-10 h-10 bg-emerald-500/20 rounded-lg flex items-center justify-center">
              <svg class="w-5 h-5 text-emerald-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
              </svg>
            </div>
            <div class="flex-1">
              <h4 class="text-white font-semibold mb-1" set:html={settings.demo.title} />
              <p class="text-sm text-gray-400">Prueba gratuita de 15 días</p>
            </div>
          </div>
          
          <button 
            type="button" 
            class="w-full px-6 py-3 bg-gradient-to-r from-emerald-500 to-teal-500 rounded-lg font-semibold text-white shadow-lg shadow-emerald-500/20 hover:shadow-emerald-500/40 transition-all duration-300 hover:scale-[1.02] flex items-center justify-center gap-2 group" 
            onclick="demo.showModal()"
          >
            <span set:html={settings.demo.cta} />
            <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"/>
            </svg>
          </button>
        </div>

        <!-- Social Links -->
        <div class="space-y-3">
          <h5 class="text-sm font-semibold text-gray-400 uppercase tracking-wide">Síguenos</h5>
          <div class="flex gap-3">
            { settings.social_links.map(item => (
              <a 
                href={item.link}
                target="_blank"
                rel="noopener noreferrer"
                class="w-10 h-10 bg-white/5 hover:bg-white/10 border border-white/10 hover:border-emerald-500/30 rounded-lg flex items-center justify-center transition-all duration-300 hover:scale-110 group"
                aria-label={item.title}
              >
                {item.title.includes('LinkedIn') ? (
                  <svg class="w-5 h-5 text-gray-400 group-hover:text-emerald-400 transition-colors" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                  </svg>
                ) : (
                  <svg class="w-5 h-5 text-gray-400 group-hover:text-emerald-400 transition-colors" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                  </svg>
                )}
              </a>
            ))}
          </div>
        </div>

      </div>

      <!-- Right: Navigation Grid (7 cols) -->
      <div class="lg:col-span-7 grid grid-cols-2 md:grid-cols-3 gap-8 lg:gap-12">
        
        <!-- Navigation Column -->
        <div>
          <h5 class="text-sm font-semibold text-gray-400 uppercase tracking-wide mb-4">Navegación</h5>
          <nav class="flex flex-col gap-3">
            { settings.nav.map(item => (
              <a 
                href={item.link}
                class="text-gray-300 hover:text-emerald-400 transition-colors duration-200 text-sm flex items-center gap-2 group"
              >
                <svg class="w-4 h-4 opacity-0 -ml-4 group-hover:opacity-100 group-hover:ml-0 transition-all duration-200 text-emerald-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
                <span>{item.title}</span>
              </a>
            ))}
          </nav>
        </div>

        <!-- Resources Column -->
        <div>
          <h5 class="text-sm font-semibold text-gray-400 uppercase tracking-wide mb-4">Recursos</h5>
          <nav class="flex flex-col gap-3">
            <a href="/#faq" class="text-gray-300 hover:text-emerald-400 transition-colors duration-200 text-sm flex items-center gap-2 group">
              <svg class="w-4 h-4 opacity-0 -ml-4 group-hover:opacity-100 group-hover:ml-0 transition-all duration-200 text-emerald-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
              <span>Centro de Ayuda</span>
            </a>
            <a href="/#contactanos" class="text-gray-300 hover:text-emerald-400 transition-colors duration-200 text-sm flex items-center gap-2 group">
              <svg class="w-4 h-4 opacity-0 -ml-4 group-hover:opacity-100 group-hover:ml-0 transition-all duration-200 text-emerald-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
              <span>Soporte Técnico</span>
            </a>
            <a href="/#caracteristicas" class="text-gray-300 hover:text-emerald-400 transition-colors duration-200 text-sm flex items-center gap-2 group">
              <svg class="w-4 h-4 opacity-0 -ml-4 group-hover:opacity-100 group-hover:ml-0 transition-all duration-200 text-emerald-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
              <span>Documentación</span>
            </a>
            <a href="/#nosotros" class="text-gray-300 hover:text-emerald-400 transition-colors duration-200 text-sm flex items-center gap-2 group">
              <svg class="w-4 h-4 opacity-0 -ml-4 group-hover:opacity-100 group-hover:ml-0 transition-all duration-200 text-emerald-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
              <span>Casos de Éxito</span>
            </a>
          </nav>
        </div>

        <!-- Contact Column -->
        <div>
          <h5 class="text-sm font-semibold text-gray-400 uppercase tracking-wide mb-4">Contacto</h5>
          <div class="flex flex-col gap-4">
            <a href="mailto:operaciones@pandorasoftwarecompany.site" class="text-gray-300 hover:text-emerald-400 transition-colors duration-200 text-sm flex items-start gap-3 group">
              <svg class="w-5 h-5 text-gray-500 group-hover:text-emerald-400 transition-colors flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
              </svg>
              <div class="flex-1">
                <p class="font-medium">Email</p>
                <p class="text-xs text-gray-500 break-all">operaciones@pandorasoftwarecompany.site</p>
              </div>
            </a>
            
            <a href="https://wa.me/51971089138" target="_blank" rel="noopener noreferrer" class="text-gray-300 hover:text-emerald-400 transition-colors duration-200 text-sm flex items-start gap-3 group">
              <svg class="w-5 h-5 text-gray-500 group-hover:text-emerald-400 transition-colors flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
              </svg>
              <div class="flex-1">
                <p class="font-medium">WhatsApp</p>
                <p class="text-xs text-gray-500">+51 971 089 138</p>
              </div>
            </a>
          </div>
        </div>

      </div>

    </div>

    <!-- Divider -->
    <div class="h-px bg-gradient-to-r from-transparent via-white/10 to-transparent mb-8"></div>

    <!-- Bottom Bar -->
    <div class="flex flex-col md:flex-row justify-between items-center gap-4 text-sm">
      
      <!-- Copyright -->
      <div class="text-gray-500 text-center md:text-left">
        <p>© {currentYear} MineTrack AI. Todos los derechos reservados.</p>
      </div>

      <!-- Legal Links -->
      <div class="flex flex-wrap justify-center gap-6 text-gray-500">
        <a href="https://pandorasoftwarecompany.site/" target="_blank" rel="noopener noreferrer" class="hover:text-emerald-400 transition-colors duration-200">
          Desarrollado por Pandora Software
        </a>
        <span class="text-gray-700">•</span>
        <a href="/#faq" class="hover:text-emerald-400 transition-colors duration-200">
          Privacidad
        </a>
        <span class="text-gray-700">•</span>
        <a href="/#faq" class="hover:text-emerald-400 transition-colors duration-200">
          Términos
        </a>
      </div>

      <!-- Back to Top -->
      <a 
        href="#inicio" 
        class="flex items-center gap-2 text-gray-500 hover:text-emerald-400 transition-all duration-300 group"
        aria-label="Volver arriba"
      >
        <span class="text-sm">Volver arriba</span>
        <svg class="w-5 h-5 group-hover:-translate-y-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18"/>
        </svg>
      </a>

    </div>

  </div>
</footer>

<style>
  .glass {
    background: rgba(255, 255, 255, 0.03);
    backdrop-filter: blur(10px);
  }
</style>

