---
const { title, features } = Astro.props
---

<section class="relative py-20 lg:py-32 overflow-hidden bg-gradient-to-b from-bs-surface-0 to-bs-surface-1">
  <div class="bs-container">
    
    <!-- Title -->
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold text-white mb-4" set:html={title} />
      <p class="text-xl text-gray-400">Visibilidad en tiempo real de toda la ejecuci√≥n del mantenimiento</p>
    </div>

    <!-- Features Grid -->
    <div class="grid md:grid-cols-3 gap-6 lg:gap-8 max-w-6xl mx-auto">
      
      {features.map((feature, index) => (
        <div class="feature-card" style={`animation-delay: ${index * 0.1}s`}>
          <div class={`card-container card-${index + 1}`}>
            
            <!-- Icon Section -->
            <div class="icon-section">
              <svg class="w-12 h-12 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d={feature.icon} />
              </svg>
            </div>

            <!-- Content Section -->
            <div class="content-section">
              <h3 class="text-xl font-bold text-white mb-2 leading-tight">{feature.title}</h3>
              <p class="text-sm text-white/80 leading-relaxed">{feature.description}</p>
            </div>

          </div>
        </div>
      ))}

    </div>
  </div>

  <!-- Decorative elements -->
  <div class="absolute top-20 left-10 w-96 h-96 bg-red-500/10 rounded-full blur-3xl"></div>
  <div class="absolute bottom-20 right-10 w-96 h-96 bg-teal-500/10 rounded-full blur-3xl"></div>
</section>

<style>
  .feature-card {
    animation: fadeInUp 0.8s ease-out forwards;
    opacity: 0;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .card-container {
    display: flex;
    flex-direction: column;
    border-radius: 1rem;
    overflow: hidden;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
    transition: all 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
    height: 100%;
    min-height: 280px;
  }

  .card-container:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 50px rgba(0, 0, 0, 0.5);
  }

  .icon-section {
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    padding: 2.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .content-section {
    flex: 1;
    padding: 2rem;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    gap: 0.75rem;
  }

  /* Color gradients for each card */
  .card-1 {
    background: linear-gradient(135deg, #dc2626 0%, #b91c1c 100%);
  }

  .card-2 {
    background: linear-gradient(135deg, #0ea5e9 0%, #0284c7 100%);
  }

  .card-3 {
    background: linear-gradient(135deg, #8b5cf6 0%, #7c3aed 100%);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .card-container {
      min-height: 240px;
    }

    .icon-section {
      padding: 2rem;
    }

    .icon-section svg {
      width: 2.5rem;
      height: 2.5rem;
    }

    .content-section {
      padding: 1.5rem;
    }

    .content-section h3 {
      font-size: 1.125rem;
    }

    .content-section p {
      font-size: 0.875rem;
    }
  }
</style>
