---
const { title, features } = Astro.props
---

<section class="relative py-20 lg:py-32 overflow-hidden">
  <div class="bs-container">
    
    <!-- Title -->
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold text-white mb-4" set:html={title} />
      <p class="text-xl text-gray-400">Visibilidad en tiempo real de toda la ejecuci√≥n del mantenimiento</p>
    </div>

    <!-- Features Grid -->
    <div class="grid md:grid-cols-3 gap-8 lg:gap-12">
      
      {features.map((feature) => (
        <div class="feature-card group">
          <div class="glass p-8 rounded-2xl h-full flex flex-col items-center text-center transition-all duration-500 hover:scale-105 hover:shadow-2xl hover:shadow-emerald-500/20">
            
            <!-- Icon -->
            <div class="w-24 h-24 rounded-2xl bg-gradient-to-br from-red-500 to-red-600 flex items-center justify-center mb-6 shadow-lg shadow-red-500/30 group-hover:shadow-red-500/50 transition-all duration-300">
              <svg class="w-12 h-12 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={feature.icon} />
              </svg>
            </div>

            <!-- Title -->
            <h3 class="text-2xl font-bold text-white mb-4">{feature.title}</h3>

            <!-- Description -->
            <p class="text-gray-300 leading-relaxed">{feature.description}</p>

          </div>
        </div>
      ))}

    </div>
  </div>

  <!-- Decorative elements -->
  <div class="absolute top-20 left-10 w-64 h-64 bg-red-500/10 rounded-full blur-3xl"></div>
  <div class="absolute bottom-20 right-10 w-96 h-96 bg-emerald-500/10 rounded-full blur-3xl"></div>
</section>

<style>
  .feature-card {
    animation: fadeInUp 0.8s ease-out forwards;
    opacity: 0;
  }

  .feature-card:nth-child(1) {
    animation-delay: 0.1s;
  }

  .feature-card:nth-child(2) {
    animation-delay: 0.2s;
  }

  .feature-card:nth-child(3) {
    animation-delay: 0.3s;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
