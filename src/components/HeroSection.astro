---
import Image from "astro/components/Image.astro"
import hero_screens from "../assets/theme-images/iphone3.png"
import hero_screens5 from "../assets/theme-images/iphone5.png"
import hero_screens7 from "../assets/theme-images/iphone7.png"

const { settings, title, content } = Astro.props
---

<section class="hero-section relative min-h-screen flex items-center justify-center overflow-hidden">
  
  <!-- Hero Content -->
  <div class="bs-container relative z-10 py-20 lg:py-32">
    <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
      
      <!-- Left Content -->
      <div class="flex flex-col gap-8 text-center lg:text-left hero-content">
        
        <!-- Badge -->
        <div class="inline-flex items-center gap-2 self-center lg:self-start px-4 py-2 rounded-full bg-white/5 backdrop-blur-xl border border-white/10">
          <span class="relative flex h-2 w-2">
            <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-emerald-400 opacity-75"></span>
            <span class="relative inline-flex rounded-full h-2 w-2 bg-emerald-500"></span>
          </span>
          <span class="text-sm font-medium text-emerald-400">Optimiza tus operaciones mineras</span>
        </div>

        <!-- Title with gradient -->
        <h1 class="hero-title text-5xl md:text-6xl lg:text-7xl font-bold leading-tight">
          <span class="block bg-gradient-to-r from-white via-white to-white/80 bg-clip-text text-transparent" set:html={ title } />
        </h1>

        <!-- Description -->
        <div class="hero-description text-lg md:text-xl text-gray-300 leading-relaxed max-w-2xl mx-auto lg:mx-0" set:html={ content } />

        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 items-center lg:items-start">
          <button 
            type="button" 
            class="group relative px-8 py-4 bg-gradient-to-r from-emerald-500 to-teal-500 rounded-xl font-semibold text-white shadow-lg shadow-emerald-500/30 hover:shadow-emerald-500/50 transition-all duration-300 hover:scale-105 w-full sm:w-auto"
            onclick="demo.showModal()"
          >
            <span class="relative z-10">{ settings.demo.cta }</span>
            <div class="absolute inset-0 rounded-xl bg-gradient-to-r from-emerald-600 to-teal-600 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
          </button>
          
          <a 
            href="#services" 
            class="px-8 py-4 bg-white/5 backdrop-blur-xl border border-white/10 rounded-xl font-semibold text-white hover:bg-white/10 transition-all duration-300 w-full sm:w-auto text-center"
          >
            Conocer más
          </a>
        </div>

        <!-- Stats -->
        <div class="grid grid-cols-3 gap-6 mt-8 pt-8 border-t border-white/10">
          <div class="text-center lg:text-left">
            <div class="text-3xl font-bold text-white mb-1">30%</div>
            <div class="text-sm text-gray-400">Reducción de tiempos</div>
          </div>
          <div class="text-center lg:text-left">
            <div class="text-3xl font-bold text-white mb-1">24/7</div>
            <div class="text-sm text-gray-400">Monitoreo continuo</div>
          </div>
          <div class="text-center lg:text-left">
            <div class="text-3xl font-bold text-white mb-1">100+</div>
            <div class="text-sm text-gray-400">Plantas activas</div>
          </div>
        </div>
      </div>

      <!-- Right Content - Screenshots -->
      <div class="relative lg:block hidden">
        <div class="screens-container relative">
          <!-- Main Screen -->
          <div class="screen-card main-screen glass-card">
            <Image 
              src={ hero_screens } 
              format="avif"
              width={400} 
              height={800}
              class="w-full h-auto rounded-2xl shadow-2xl"
              quality="high" 
              alt="Interfaz de MineTrack AI mostrando dashboard de gestión de paradas de planta minera" 
              loading="eager" 
            />
          </div>

          <!-- Secondary Screen 1 -->
          <div class="screen-card secondary-screen-1 glass-card">
            <Image 
              src={ hero_screens5 } 
              format="avif"
              width={300} 
              height={600}
              class="w-full h-auto rounded-xl shadow-xl"
              quality="high" 
              alt="Vista de planificación de mantenimiento en software MineTrack AI para operaciones mineras" 
              loading="eager" 
            />
          </div>

          <!-- Secondary Screen 2 -->
          <div class="screen-card secondary-screen-2 glass-card">
            <Image 
              src={ hero_screens7 } 
              format="avif"
              width={280} 
              height={560}
              class="w-full h-auto rounded-xl shadow-xl"
              quality="high" 
              alt="Reportes y análisis de tiempos de inactividad en planta minera con MineTrack AI" 
              loading="eager" 
            />
          </div>

          <!-- Decorative Elements -->
          <div class="absolute -top-20 -right-20 w-72 h-72 bg-emerald-500/20 rounded-full blur-3xl animate-pulse"></div>
          <div class="absolute -bottom-20 -left-20 w-72 h-72 bg-teal-500/20 rounded-full blur-3xl animate-pulse" style="animation-delay: 1s;"></div>
        </div>
      </div>

    </div>
  </div>

  <!-- Scroll Indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 z-10 animate-bounce">
    <div class="w-6 h-10 border-2 border-white/30 rounded-full flex items-start justify-center p-2">
      <div class="w-1 h-2 bg-white/60 rounded-full"></div>
    </div>
  </div>

</section>

<style>
  .hero-section {
    position: relative;
  }

  .glass-card {
    background: rgba(255, 255, 255, 0.03);
    backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 1.5rem;
    padding: 1rem;
  }

  /* Content Animations */
  .hero-content > * {
    opacity: 0;
    animation: fadeInUp 0.8s ease-out forwards;
  }

  .hero-content > *:nth-child(1) { animation-delay: 0.1s; }
  .hero-content > *:nth-child(2) { animation-delay: 0.2s; }
  .hero-content > *:nth-child(3) { animation-delay: 0.3s; }
  .hero-content > *:nth-child(4) { animation-delay: 0.4s; }
  .hero-content > *:nth-child(5) { animation-delay: 0.5s; }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Screens Container */
  .screens-container {
    position: relative;
    height: 600px;
    animation: fadeIn 1s ease-out 0.6s forwards;
    opacity: 0;
  }

  @keyframes fadeIn {
    to { opacity: 1; }
  }

  .screen-card {
    position: absolute;
    transition: transform 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
  }

  .screen-card:hover {
    transform: translateY(-10px) scale(1.02);
    z-index: 10;
  }

  .main-screen {
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 3;
  }

  .secondary-screen-1 {
    top: 10%;
    right: -5%;
    transform: rotate(5deg);
    z-index: 2;
  }

  .secondary-screen-2 {
    bottom: 5%;
    left: -5%;
    transform: rotate(-5deg);
    z-index: 1;
  }

  /* Floating animation for screens */
  @keyframes float {
    0%, 100% {
      transform: translate(-50%, -50%) translateY(0px);
    }
    50% {
      transform: translate(-50%, -50%) translateY(-20px);
    }
  }

  .main-screen {
    animation: float 6s ease-in-out infinite;
  }

  @keyframes floatRotate1 {
    0%, 100% {
      transform: rotate(5deg) translateY(0px);
    }
    50% {
      transform: rotate(5deg) translateY(-15px);
    }
  }

  .secondary-screen-1 {
    animation: floatRotate1 5s ease-in-out infinite;
  }

  @keyframes floatRotate2 {
    0%, 100% {
      transform: rotate(-5deg) translateY(0px);
    }
    50% {
      transform: rotate(-5deg) translateY(-10px);
    }
  }

  .secondary-screen-2 {
    animation: floatRotate2 7s ease-in-out infinite;
  }

  /* Mobile responsive */
  @media (max-width: 1024px) {
    .screens-container {
      display: none;
    }
  }
</style>
