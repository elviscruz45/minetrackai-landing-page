---

const { title, clients } = Astro.props

---

<section class="relative py-20 lg:py-32 bg-gradient-to-b from-bs-surface-1 to-bs-surface-0">
  <div class="bs-container">

    <!-- Title -->
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold text-white mb-4">Entérate por qué nuestros clientes nos eligen</h2>
    </div>

    <!-- Logos Grid -->
    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-8 items-center justify-items-center mb-12">

      {clients.map((item) => (
        <div class="client-logo group">
          <div class="glass p-6 rounded-xl h-full flex items-center justify-center transition-all duration-300 hover:scale-110 hover:shadow-xl hover:shadow-white/10">
            <img
              src={item.image}
              alt={item.title}
              class="max-w-full max-h-16 w-auto h-auto opacity-70 group-hover:opacity-100 transition-opacity duration-300 filter grayscale group-hover:grayscale-0"
              loading="lazy"
            />
          </div>
        </div>
      ))}

    </div>

    <!-- Partners Button -->
    <div class="text-center mt-12">
      <a 
        href="#partners" 
        class="inline-block px-6 py-3 bg-white/5 border border-white/10 rounded-full text-sm font-semibold text-gray-300 hover:bg-white/10 hover:text-white transition-all duration-300"
      >
        Partners
      </a>
    </div>

  </div>
</section>

<style>
  .client-logo {
    animation: fadeIn 0.6s ease-out forwards;
    opacity: 0;
  }

  .client-logo:nth-child(1) { animation-delay: 0.1s; }
  .client-logo:nth-child(2) { animation-delay: 0.15s; }
  .client-logo:nth-child(3) { animation-delay: 0.2s; }
  .client-logo:nth-child(4) { animation-delay: 0.25s; }
  .client-logo:nth-child(5) { animation-delay: 0.3s; }
  .client-logo:nth-child(6) { animation-delay: 0.35s; }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
