        <label class="sr-only" for="name">Name</label>

        <input
          id="name"
          type="text"
          class="border-2 rounded-lg bg-bs-surface-0 border-bs-surface-3 form-input px-4 py-3"
          placeholder="Nombres"
        >

        <!-- Company -->
        <label class="sr-only" for="company">Company</label>

        <input
          id="company"
          type="text"
          class="border-2 rounded-lg bg-bs-surface-0 border-bs-surface-3 form-input px-4 py-3"
          placeholder="Empresa"
        >

        <!-- Email -->
